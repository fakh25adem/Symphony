{% extends 'base.html.twig' %}

{% block title %}Détails de l'Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5" style="background-color: #f0f8ff; border-radius: 10px; padding: 30px;">

        <!-- Title with Centered Text and Primary Color -->
        <h1 class="mb-4 text-center text-primary">Détails de l'Utilisateur</h1>

        <!-- Card for User Details -->
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Liens de navigation -->
        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_user_index') }}" class="btn btn-primary">
                <i class="bi bi-arrow-left-circle"></i> Retour à la liste
            </a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Modifier
            </a>
        </div>

    </div>
{% endblock %}
