{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
    <div class="container mt-5" style="background-color: #f0f8ff; border-radius: 10px; padding: 30px;">

        <!-- Title with Centered Text and Primary Color -->
        <h1 class="mb-4 text-center text-primary">
            <i class="fas fa-users"></i> Liste des Utilisateurs
        </h1>

        <!-- Table des utilisateurs -->
        <div class="card shadow-lg border-primary mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-users"></i> Liste des Utilisateurs</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th style="width: 250px;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <!-- Afficher et Modifier en même ligne -->
                                <div class="d-flex justify-content-start gap-2">
                                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm" style="border-radius: 20px;">
                                        <i class="bi bi-eye"></i> Afficher
                                    </a>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm" style="border-radius: 20px;">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">Aucun utilisateur trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Lien pour créer un utilisateur -->
        <div class="d-flex justify-content-center mt-4">
            <a href="{{ path('app_user_new') }}" class="btn btn-success btn-sm" style="border-radius: 20px;">
                <i class="bi bi-plus-circle"></i> Créer un utilisateur
            </a>
        </div>
    </div>

{% endblock %}
