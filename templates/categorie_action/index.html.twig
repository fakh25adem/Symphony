{% extends 'base.html.twig' %}

{% block title %}Catégories d'Actions - Liste{% endblock %}

{% block body %}
    <div class="container mt-5" style="background-color: #f0f8ff; border-radius: 15px; padding: 30px;">
        <!-- Titre principal -->
        <h1 class="mb-4 text-center text-primary"><i class="bi bi-clipboard-check"></i> Liste des Catégories d'Actions</h1>

        <!-- Table des Catégories d'Actions -->
        <div class="card shadow-lg border-primary mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-cogs"></i> Catégories</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th style="width: 250px;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for categorie_action in categorie_actions %}
                        <tr>
                            <td>{{ categorie_action.id }}</td>
                            <td>{{ categorie_action.nom }}</td>
                            <td>{{ categorie_action.description }}</td>
                            <td>
                                <!-- Afficher et Modifier avec icônes remplies -->
                                <div class="d-flex justify-content-start gap-2">
                                    <a href="{{ path('app_categorie_action_show', {'id': categorie_action.id}) }}" class="btn btn-info btn-sm" style="border-radius: 20px;">
                                        <i class="bi bi-eye-fill"></i> Afficher
                                    </a>
                                    <a href="{{ path('app_categorie_action_edit', {'id': categorie_action.id}) }}" class="btn btn-warning btn-sm" style="border-radius: 20px;">
                                        <i class="bi bi-pencil-fill"></i> Modifier
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">Aucune catégorie d'action trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Lien pour créer une nouvelle catégorie -->
        <div class="d-flex justify-content-center mt-4">
            <a href="{{ path('app_categorie_action_new') }}" class="btn btn-success btn-lg" style="border-radius: 20px;">
                <i class="bi bi-plus-circle-fill"></i> Créer une nouvelle catégorie
            </a>
        </div>
    </div>
{% endblock %}
