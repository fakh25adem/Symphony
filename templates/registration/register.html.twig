<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Style for the registration page */
        body {
            background-color: #e9ecef;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            max-width: 400px;
            padding: 40px;
            border: 1px solid #ccc;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }

        .icon-container {
            margin-bottom: 20px;
            text-align: center;
        }

        .icon-container i {
            font-size: 50px;
            color: #007bff; /* Blue color for consistency */
        }

        h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
            text-align: center;
        }

        .form-control {
            border-radius: 20px;
            padding: 10px;
            font-size: 16px;
        }

        .input-group {
            margin-bottom: 20px;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border-radius: 20px 0 0 20px;
            border-right: none;
        }

        .form-control {
            border-radius: 0 20px 20px 0;
            border-left: none;
        }

        .btn {
            border-radius: 20px;
            padding: 10px 20px;
            font-size: 16px;
            width: 100%;
            background-color: #007bff;
            color: white;
            border: none;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .alert {
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .form-control:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.75);
        }
    </style>
</head>
<body>

<div class="container">
    <!-- Icon for Register -->
    <div class="icon-container">
        <i class="bi bi-person-plus-fill"></i>
    </div>

    <!-- Title -->
    <h1>Create an Account</h1>

    <!-- Error Messages -->
    {% if form_errors(registrationForm) %}
        <div class="alert alert-danger">
            {{ form_errors(registrationForm) }}
        </div>
    {% endif %}

    <!-- Form -->
    {{ form_start(registrationForm) }}
    <!-- Email Field -->
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
        </div>
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
    </div>

    <!-- Password Field -->
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="bi bi-lock"></i></span>
        </div>
        {{ form_widget(registrationForm.plainPassword, {
            'attr': {'class': 'form-control', 'placeholder': 'Password'}
        }) }}
    </div>

    <!-- Agree Terms Checkbox -->
    <div class="form-group text-left">
        {{ form_widget(registrationForm.agreeTerms) }}
        <label for="{{ registrationForm.agreeTerms.vars.id }}">I agree to the terms and conditions</label>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn">
        <i class="bi bi-check-circle"></i> Register
    </button>
    {{ form_end(registrationForm) }}
</div>

<!-- Bootstrap Scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
