{% extends 'base.html.twig' %}

{% block title %}Edit Action Environnementale{% endblock %}

{% block body %}
    <!-- Main Container with Background Color and Padding -->
    <div class="container mt-5" style="background-color: #f0f8ff; border-radius: 10px; padding: 30px;">

        <!-- Title with Centered Text and Primary Color -->
        <h1 class="mb-4 text-center text-primary">Modifier l'Action Environnementale</h1>

        <!-- Success/Alert Messages -->
        {% if app.session.flashbag.has('success') %}
            <div class="alert alert-success">
                {{ app.session.flashbag.get('success')[0] }}
            </div>
        {% elseif app.session.flashbag.has('error') %}
            <div class="alert alert-danger">
                {{ app.session.flashbag.get('error')[0] }}
            </div>
        {% endif %}

        <!-- Card for Form with Modern Design -->
        <div class="card shadow-lg border-primary mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-edit"></i> Mise à jour de l'action</h5>
            </div>
            <div class="card-body">
                <!-- Form -->
                {{ include('action_environm/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>
        </div>

        <!-- Back Button with Icon -->
        <a href="{{ path('app_action_environm_index') }}" class="btn btn-outline-primary mt-4">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>

        <!-- Delete Confirmation Section with Card Layout -->
        <div class="mt-4">
            <div class="card shadow-sm">
                <div class="card-body text-center text-danger">
                    <h5><i class="fas fa-exclamation-circle"></i> Êtes-vous sûr de vouloir supprimer cette action ?</h5>
                    {{ include('action_environm/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
